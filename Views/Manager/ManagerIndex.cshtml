<div class="col-sm-6">
    <h1 class="m-0">使用者介面</h1>
</div>
<div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
        <li class="breadcrumb-item active">Starter Page</li>
    </ol>
</div>

<div id="manager-index" class="col-12">
    <template>
        <b-container fluid>
            <!-- User Interface controls -->
            <b-row>
                <b-col lg="6" class="my-1">
                    <b-form-group label="Sort"
                                  label-for="sort-by-select"
                                  label-cols-sm="3"
                                  label-align-sm="right"
                                  label-size="sm"
                                  class="mb-0"
                                  v-slot="{ ariaDescribedby }">
                        <b-input-group size="sm">
                            <b-form-select id="sort-by-select"
                                           v-model="sortBy"
                                           :options="sortOptions"
                                           :aria-describedby="ariaDescribedby"
                                           class="w-75">
                                <template #first>
                                    <option value="">-- none --</option>
                                </template>
                            </b-form-select>

                            <b-form-select v-model="sortDesc"
                                           :disabled="!sortBy"
                                           :aria-describedby="ariaDescribedby"
                                           size="sm"
                                           class="w-25">
                                <option :value="false">Asc</option>
                                <option :value="true">Desc</option>
                            </b-form-select>
                        </b-input-group>
                    </b-form-group>
                </b-col>

                <b-col lg="6" class="my-1">
                    <b-form-group label="Initial sort"
                                  label-for="initial-sort-select"
                                  label-cols-sm="3"
                                  label-align-sm="right"
                                  label-size="sm"
                                  class="mb-0">
                        <b-form-select id="initial-sort-select"
                                       v-model="sortDirection"
                                       :options="['asc', 'desc', 'last']"
                                       size="sm"></b-form-select>
                    </b-form-group>
                </b-col>

                <b-col lg="6" class="my-1">
                    <b-form-group label="Filter"
                                  label-for="filter-input"
                                  label-cols-sm="3"
                                  label-align-sm="right"
                                  label-size="sm"
                                  class="mb-0">
                        <b-input-group size="sm">
                            <b-form-input id="filter-input"
                                          v-model="filter"
                                          type="search"
                                          placeholder="Type to Search"></b-form-input>

                            <b-input-group-append>
                                <b-button :disabled="!filter" v-on:click="filter = ''">Clear</b-button>
                            </b-input-group-append>
                        </b-input-group>
                    </b-form-group>
                </b-col>

                <b-col sm="5" md="6" class="my-1">
                    <b-form-group label="Per page"
                                  label-for="per-page-select"
                                  label-cols-sm="6"
                                  label-cols-md="4"
                                  label-cols-lg="3"
                                  label-align-sm="right"
                                  label-size="sm"
                                  class="mb-0">
                        <b-form-select id="per-page-select"
                                       v-model="perPage"
                                       :options="pageOptions"
                                       size="sm"></b-form-select>
                    </b-form-group>
                </b-col>



                <b-col sm="12" md="12" class="my-1">
                    <b-pagination v-model="currentPage"
                                  :total-rows="totalRows"
                                  :per-page="perPage"
                                  align="fill"
                                  size="sm"
                                  class="my-0"></b-pagination>
                </b-col>
            </b-row>


            <!-- Button trigger modal -->



            <b-button v-b-modal.modaltext>新增管理員資料</b-button>

            <b-modal id="modaltext" :title="newinfoModal.title" @@ok="()=>{createItem(newinfoModal)}" v-on:hide="resetnewInfoModal">
                <h1>新增管理者</h1>
                <div class="form-group">
                    <label for="managerUserName"> 姓名 </label>
                    <input v-model="newinfoModal.managerUserName" type="text" class="form-control" id=" managerUserName " name="managerUserName">
                </div>
                <div class="form-group">
                    <label for="managerName">帳號</label>
                    <input v-model="newinfoModal.managerName" type="text" class="form-control" id="managerName" name="managerName">
                </div>
                <div class="form-group">
                    <label for="managerPassword">密碼</label>
                    <input v-model="newinfoModal.password" type="password" class="form-control" id="managerPassword" name="managerPassword">
                </div>
                <div class="form-group">
                    <label for="managerRoleID">ManagerRoleID</label>
                    <input v-model="newinfoModal.managerRoleID" type="text" class="form-control" id="managerRoleID" name="managerRoleID">
                </div>
            </b-modal>
            <!-- Modal end -->
            <!-- Main table element -->
            <b-table :items="items"
                     :fields="fields"
                     :current-page="currentPage"
                     :per-page="perPage"
                     :filter="filter"
                     :filter-included-fields="filterOn"
                     :sort-by.sync="sortBy"
                     :sort-desc.sync="sortDesc"
                     :sort-direction="sortDirection"
                     stacked="md"
                     show-empty
                     small
                     v-on:filtered="onFiltered">
                <template #cell(name)="row">
                    {{ row.value }}
                </template>
                <template v-slot:cell(productName)="row">
                    <div style="max-width:250px; overflow-y:auto;">
                        {{ row.value }}
                    </div>
                </template>

                <template #cell(actions)="row">

                    @*<b-button size="sm" v-on:click="row.toggleDetails" variant="success">
                        {{ row.detailsShowing ? 'Hide' : 'Show' }} Details
                    </b-button>*@
                    <b-button size="sm" v-on:click="info(row.item, row.index, $event.target)" class="mr-1">
                        Edit
                    </b-button>
                    <b-button size="sm" variant="danger" v-on:click="removeItem(row.item)">
                        Delete
                    </b-button>
                </template>

                @*<template #row-details="row">
                    <b-card>
                        <ul>
                            <li v-for="(value, key) in row.item" :key="key">{{ key }}: {{ value }}</li>
                        </ul>
                    </b-card>
                </template>*@
            </b-table>
            @*修改管理者*@
            <b-modal :id="infoModal.id" :title="infoModal.title" @@OK="()=>{submitEdit()}" v-on:hide="resetInfoModal">
                <h1>修改管理者</h1>
                <div class="form-group">
                    <label for="managerUserName"> 會員編號 </label>
                    <input v-model="infoModal.managerID" disabled="disabled" class="form-control" id=" managerUserName " name="managerUserName">
                </div>
                <div class="form-group">
                    <label for="managerUserName"> 姓名 </label>
                    <input v-model="infoModal.managerUserName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="managerName">帳號</label>
                    <input v-model="infoModal.managerName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="managerPassword">密碼</label>
                    <input type="password" v-model="infoModal.managerPassword" class="form-control">
                </div>
                <div class="form-group">
                    <label for="managerRoleID">ManagerRoleID</label>
                    <input v-model="infoModal.managerRoleID" class="form-control">
                </div>
            </b-modal>
        </b-container>
    </template>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script src="~/js/Manager/Manager.js"></script>
