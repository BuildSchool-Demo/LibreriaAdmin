<div id="email" class="container">
    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <label for="">聯絡人姓名</label>
            <input v-model="inputData.Name" type="text" class="form-control">
            <div class="text-danger small mt-1">
                {{inputDataCheck.AccountErrorMsg}}
            </div>

        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="">聯絡電話</label>
            <input v-model="inputData.Tel" type="text" class="form-control">
            <div class="text-danger small mt-1">
                {{inputDataCheck.AccountErrorMsg}}
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="">電子郵件</label>
            <input v-model="inputData.Account" type="text" v-bind:class="{'is-invalid':inputDataCheck.AccountError}"
                   class="form-control">
            <div class="text-danger small mt-1">
                {{inputDataCheck.AccountErrorMsg}}
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="">展覽名稱</label>
            <input v-model="inputData.Password" type="text"
                   v-bind:class="{'is-invalid':inputDataCheck.PasswordError}" class="form-control">
            <div class="text-danger small mt-1">
                {{inputDataCheck.PasswordErrorMsg}}
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <label for="">主辦單位</label>
            <input v-model="inputData.CheckPassword" type="text"
                   v-bind:class="{'is-invalid':inputDataCheck.checkPasswordError}" class=" form-control">
            <div class="text-danger small mt-1">
                {{inputDataCheck.CheckPasswordErrorMsg}}
            </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
            <label for="">票價</label>
            <input v-model="inputData.Adress" type="text" class="form-control">
            <div class="text-danger small mt-1"></div>
        </div>

        <div class="col-12 col-md-12 mb-3">
            <label for="">展演簡介</label>
            <input v-model="inputData.Adress" type="text" class="form-control">
            <div class="text-danger small mt-1"></div>
        </div>

        <div class="col-12 col-md-6 mb-3">
            <label>single</label>
            <b-form-checkbox v-model="inputData.Single" switch size="lg">
                {{inputData.Single ? '單身GO':'馬子GO'}}
            </b-form-checkbox>
        </div>
    </div>
    <span class="d-inline-block" tabindex="0">
        <b-button variant="success" v-bind:disabled="AddVerify == false">新增</b-button>
    </span>
</div>
<script src="~/js/Exhibition/Email.js"></script>