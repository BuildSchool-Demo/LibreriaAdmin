@{
    Layout = null;
}

<!-- Load required Bootstrap and BootstrapVue CSS -->
<link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css" />
<link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.css" />
<!-- Load polyfills to support older browsers -->
<script src="//polyfill.io/v3/polyfill.min.js?features=es2015%2CIntersectionObserver"
        crossorigin="anonymous"></script>
<!-- Load Vue followed by BootstrapVue -->
<script src="//unpkg.com/vue@latest/dist/vue.min.js"></script>
<script src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.js"></script>
<!-- Load the following for BootstrapVueIcons support -->
<script src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue-icons.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/Exhibiton/Email.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ==" crossorigin="anonymous"></script>

<script type="text/javascript">
    var exhibitionId = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewData["exhibitionId"]));
</script>

<nav class="emailNavbar">
    <div class="emailNavbar-item">
        <a href="#">
            <img src="https://i.imgur.com/JW46SOf.png">
        </a>
    </div>
</nav>

<div class="container email-text">
    <h1>展演資料內容確認</h1>
    <p> 以下內容將會公布於Libreria官網的展演公告區。</p>
    <p>如內容需做修改請按修改鈕，資料確認送出後會再回信與您核對內容，謝謝!</p>
</div>

<form id="email" class="container">
    <div class="row">
        <div class="row col-12 col-md-6">
            <div class="col-12 col-md-6 mb-3">
                <label for="">聯絡人姓名</label>
                <input v-model="inputData.ExCustomerName" type="text" class="form-control" id="exCustomerName" v-bind:class="{'is-invalid':inputDataCheck.NameError}">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.NameErrorMsg}}
                </div>

            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="">聯絡電話</label>
                <input v-model="inputData.ExCustomerPhone" type="text" class="form-control" id="exCustomerPhone" v-bind:class="{'is-invalid':inputDataCheck.PhoneError}">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.PhoneErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-8 mb-3">
                <label for="">電子郵件</label>
                <input v-model="inputData.ExCustomerEmail" type="email" v-bind:class="{'is-invalid':inputDataCheck.EmailError}"
                       class="form-control" id="exCustomerEmail">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.EmailErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label for="">票價</label>
                <input v-model="inputData.ExhibitionPrice" type="text" class="form-control" id="exhibitionPrice" v-bind:class="{'is-invalid':inputDataCheck.PriceError}">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.PriceErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label>展覽開始日期:</label>
                <b-form-select v-model="inputData.ExhibitionStartTime" :options="startDateOptions" id="startDate" v-bind:class="{'is-invalid':inputDataCheck.StartTimeError}"></b-form-select>
                <div class="text-danger small mt-1">
                    {{inputDataCheck.StartTimeErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label>展覽結束日期:</label>
                <b-form-select v-model="inputData.ExhibitionEndTime" :options="endDateOptions" id="endDate" v-bind:class="{'is-invalid':inputDataCheck.EndTimeError}"></b-form-select>
                <div class="text-danger small mt-1">
                    {{inputDataCheck.EndTimeErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-12 mb-3">
                <label for="">展覽名稱</label>
                <input v-model="inputData.ExName" type="text"
                       v-bind:class="{'is-invalid':inputDataCheck.ExNameError}" class="form-control" id="exName">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.ExNameErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-12 mb-3">
                <label for="">主辦單位</label>
                <input v-model="inputData.MasterUnit" type="text"
                       v-bind:class="{'is-invalid':inputDataCheck.MasterUnitError}" class=" form-control" id="masterUnit">
                <div class="text-danger small mt-1">
                    {{inputDataCheck.MasterUnitErrorMsg}}
                </div>
            </div>




        </div>
        <div class="row col-12 col-md-6">

            <div class="col-12 col-md-12 mb-3">
                <label for="">展覽圖片</label>
                <div class="col-12 mb-3 email-pic">
                    <img v-bind:src="inputData.ExPhoto" />
                </div>
                <b-form-file v-model="inputData.ExPhoto"
                             :state="Boolean(inputData.ExPhoto)"
                             placeholder="請選擇圖片檔"
                             accept="image/*"
                             DataValExtension="jpg,jpeg,gif,png,bmp"
                             drop-placeholder="Drop file here..."
                             id="exPhoto"
                             v-on:change="photo"
                             v-bind:class="{'is-invalid':inputDataCheck.PhotoError}"></b-form-file>
                <div class="text-danger small mt-1">
                    {{inputDataCheck.PhotoErrorMsg}}
                </div>
            </div>
            <div class="col-12 col-md-12 mb-3">
                <label for="">展覽簡介</label>
                <b-form-textarea id="textarea-rows"
                                 placeholder=""
                                 rows="5"
                                 class="form-control"
                                 v-model="inputData.ExhibitionIntro"
                                 v-bind:class="{'is-invalid':inputDataCheck.IntroError}"></b-form-textarea>
                <div class="text-danger small mt-1">
                    {{inputDataCheck.IntroErrorMsg}}
                </div>
            </div>
        </div>
    </div>

    <div class="btn-group">
        <span class="d-inline-block" tabindex="0">
            <b-button v-if="inputData.isValid != false" variant="success" v-on:click="modify($event)">修改</b-button>
        </span>
        <span class="d-inline-block" tabindex="0">
            <b-button v-if="inputData.isValid != true" variant="success" v-on:click="modifySubmit">確認送出</b-button>
        </span>
        <span class="d-inline-block" tabindex="0">  
            <b-button v-if="inputData.isValid != true" variant="success" v-on:click="cancel">取消</b-button>
        </span>
        <span class="d-inline-block" tabindex="0">
            <b-button v-if="inputData.isValid != false" variant="success" v-on:click="Submit">確認</b-button>
        </span>
    </div>

</form>
<script src="~/js/Exhibition/Email.js"></script>