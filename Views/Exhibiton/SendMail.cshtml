@section topCSS{ 
    <link href="~/css/Exhibiton/SendMail.css" rel="stylesheet" />
}
<script type="text/javascript">
    var exhibitionId = @((int)ViewBag.exhibitionId);
</script>

<div id="sendMailapp" class="col-12">
    <div class="col-6">
        
    </div>
    <div class="col-6">
        <b-form v-on:submit="onSubmit" v-on:reset="onReset" v-if="show">
            <div class="input-group">
                <div class="col-10">
                    <input type="hidden" v-model="form.exhibitionId">
                    <b-form-group id="input-group-1"
                                  label="寄件人:"
                                  label-for="input-1"
                                  description="We'll never share your email with anyone else.">
                        <b-form-input id="input-1"
                                      v-model="form.sender"
                                      type="email"
                                      placeholder="Enter email"
                                      required></b-form-input>
                    </b-form-group>
                </div>
                <div class="col-10">
                    <b-form-group id="input-group-1"
                                  label="收件人:"
                                  label-for="input-1"
                                  description="We'll never share your email with anyone else.">
                        <b-form-input id="input-1"
                                      v-model="form.recipient"
                                      type="email"
                                      placeholder="Enter email"
                                      required></b-form-input>
                    </b-form-group>
                </div>
                <div class="col-10">
                    <b-form-group id="input-group-2" label="主旨:" label-for="input-2">
                        <b-form-input id="input-2"
                                      v-model="form.subject"
                                      placeholder="Enter name"
                                      required></b-form-input>
                    </b-form-group>
                </div>
                <div class="col-10">
                    <b-form-group id="input-group-2" label="內容:" label-for="input-2">
                        <b-form-textarea id="textarea-rows"
                                         v-model="form.body"
                                         placeholder="Tall textarea"
                                         rows="8"></b-form-textarea>
                    </b-form-group>
                </div>
                <div class="col-10 button-group">
                    <b-button type="submit" variant="primary" v-on:click="onSubmit($event)">寄出</b-button>
                    <b-button type="reset" variant="danger">清除</b-button>
                </div>
            </div>
        </b-form>
    </div>
    

</div>

@section endJS{
    <script src="~/js/Exhibition/SendMail.js"></script>
}